{
  "workflow_name": "ci_interactive_test",
  "workflow_version": "1.0.0",
  "category": "test",
  "description": "Test workflow with CI-interactive steps",

  "phases": [
    {
      "phase": "GATHER",
      "description": "Gather information with CI assistance",
      "steps": [
        {
          "step": 1,
          "type": "ci_ask",
          "persona": "assistant",
          "prompt_template": "What project would you like to work on?",
          "save_to": "project_name",
          "next_step": 2
        },
        {
          "step": 2,
          "type": "ci_analyze",
          "persona": "assistant",
          "task": "Analyze the project name and categorize it",
          "analyze": "context.project_name",
          "determine": ["category", "complexity"],
          "save_to": "analysis",
          "next_step": 3
        },
        {
          "step": 3,
          "type": "ci_ask_series",
          "persona": "assistant",
          "intro": "I have a few questions to understand your project better:",
          "questions": [
            {
              "id": "goal",
              "question": "What is the main goal of this project?",
              "required": true
            },
            {
              "id": "timeline",
              "question": "What is your target timeline?",
              "required": false
            }
          ],
          "save_to": "details",
          "next_step": 4
        },
        {
          "step": 4,
          "type": "ci_present",
          "persona": "assistant",
          "format": "summary",
          "template": "project_summary",
          "data": "context.analysis",
          "sections": ["Project Overview", "Analysis", "Details"],
          "next_step": 5
        },
        {
          "step": 5,
          "type": "display",
          "message": "Thank you! Your project '{project_name}' has been analyzed.",
          "next_step": "EXIT"
        }
      ]
    }
  ]
}
