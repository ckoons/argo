{
  "workflow_id": "parent_workflow",
  "description": "Parent workflow demonstrating workflow chaining",
  "steps": [
    {
      "id": "1",
      "type": "display",
      "message": "=== Workflow Chaining Test ===\n",
      "next_step": "2"
    },
    {
      "id": "2",
      "type": "user_ask",
      "prompt": "Enter some data to validate:",
      "save_to": "user_data",
      "next_step": "3"
    },
    {
      "id": "3",
      "type": "display",
      "message": "\n[Parent Workflow] Calling child workflow to validate...\n",
      "next_step": "4"
    },
    {
      "id": "4",
      "type": "workflow_call",
      "workflow": "workflows/test/child_validator.json",
      "input": {
        "data": "{user_data}"
      },
      "save_to": "validation_result",
      "next_step": "5"
    },
    {
      "id": "5",
      "type": "display",
      "message": "\n[Parent Workflow] Child workflow returned: {validation_result}",
      "next_step": "6"
    },
    {
      "id": "6",
      "type": "display",
      "message": "\n=== Workflow Chaining Complete ===",
      "next_step": "EXIT"
    }
  ]
}
