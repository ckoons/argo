  "category": "test",
  "description": "Test Claude Code provider with streaming and memory",
  "provider": "claude_code",
  "model": "claude-sonnet-4",

  "phases": [
    {
      "phase": "TEST",
      "description": "Test Claude streaming",
      "steps": [
