        {
          "step": 2,
          "type": "ci_analyze",
          "task": "Please respond with a haiku about streaming output. Keep it short.",
          "save_to": "claude_response",
          "next_step": 3
        },
        {
          "step": 3,
          "type": "display",
          "message": "\n=== Response captured in buffer ===\n{{claude_response}}\n",
          "next_step": 4
        },
        {
          "step": 4,
          "type": "display",
          "message": "=== Test Complete ===",
          "next_step": "EXIT"
        }
      ]
    }
  ]
