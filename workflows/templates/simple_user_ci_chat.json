{
  "workflow_name": "Simple User-CI Chat",
  "description": "Interactive chat loop with AI - ask questions, get responses (type 'exit' to quit)",
  "steps": [
    {
      "step": "welcome",
      "type": "display",
      "message": "=== Interactive AI Chat ===\nType your questions and I'll respond.\nNote: Currently exits after one exchange (loop support coming soon)\n",
      "next_step": "get_user_input"
    },
    {
      "step": "get_user_input",
      "type": "user_ask",
      "prompt": "\nYou: ",
      "save_to": "user_message",
      "next_step": "send_to_ci"
    },
    {
      "step": "send_to_ci",
      "type": "ci_ask",
      "prompt_template": "{{user_message}}",
      "save_to": "ci_response",
      "next_step": "show_response"
    },
    {
      "step": "show_response",
      "type": "display",
      "message": "\nAI: {{ci_response}}\n",
      "next_step": "EXIT"
    }
  ]
}
