{
  "workflow_name": "user_chat_test",
  "workflow_version": "1.0.0",
  "category": "test",
  "description": "Simple user chat with Claude Code",
  "provider": "claude_code",
  "model": "claude-sonnet-4",

  "phases": [
    {
      "phase": "CHAT",
      "description": "Interactive chat with AI",
      "steps": [
        {
          "step": 1,
          "type": "display",
          "message": "=== Claude Code Interactive Chat ===",
          "next_step": 2
        },
        {
          "step": 2,
          "type": "user_ci_chat",
          "prompt_template": "Hello! I'm Claude. What would you like to discuss today?",
          "save_to": "chat_transcript",
          "next_step": 3
        },
        {
          "step": 3,
          "type": "display",
          "message": "\n=== Chat Complete ===\nTranscript saved to context variable: chat_transcript\n",
          "next_step": "EXIT"
        }
      ]
    }
  ]
}
