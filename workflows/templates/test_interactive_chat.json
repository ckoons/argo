{
  "workflow_name": "test_interactive_chat",
  "provider": "claude_code",
  "model": "claude-sonnet-4-5",
  "phases": [
    {
      "phase": "CHAT",
      "steps": [
        {
          "step": 1,
          "type": "display",
          "message": "=== Simple Chat Loop ===\nPress Ctrl+D to exit.\n",
          "next_step": 2
        },
        {
          "step": 2,
          "type": "user_ask",
          "prompt": "You:",
          "save_to": "user_input",
          "next_step": 3
        },
        {
          "step": 3,
          "type": "ci_analyze",
          "task": "{{user_input}}",
          "save_to": "ci_response",
          "next_step": 4
        },
        {
          "step": 4,
          "type": "display",
          "message": "Claude: {{ci_response}}\n",
          "next_step": 2
        }
      ]
    }
  ]
}
